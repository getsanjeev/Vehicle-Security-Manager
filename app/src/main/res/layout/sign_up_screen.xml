<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BF111111"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:id="@+id/sign_up"
        android:textSize="50dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textStyle="bold"
        android:id="@+id/log_in_btn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/view_1"
        android:layout_above="@id/log_in_btn"
        android:layout_below="@id/sign_up"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mail_tv"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="Email ID"
                android:textSize="25dp"
                android:textColor="#111111"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mail_et"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/mail_tv"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_tv"
                android:layout_marginTop="10dp"
                android:layout_below ="@+id/mail_et"
                android:text="Username"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="#111111"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_et"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/name_tv"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/model_tv"
                android:textStyle="bold"
                android:layout_below ="@+id/name_et"
                android:text="Vehicle Model"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:textColor="#111111"/>

            <EditText
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/model_et"
                android:layout_below="@+id/model_tv"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pass_tv"
                android:layout_below ="@+id/model_et"
                android:text="Password"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:textColor="#111111"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/pass_et"
                android:layout_below="@id/pass_tv"
                />

        </RelativeLayout>
    </ScrollView>






</RelativeLayout>